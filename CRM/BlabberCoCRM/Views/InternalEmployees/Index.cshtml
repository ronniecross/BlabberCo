@model IEnumerable<BlabberCoCRM.Models.InternalEmployee>

@{
    ViewData["Title"] = "Index";
}

<h1>Internal Employees</h1>
Create, view and manage employees. Add CSO users who can create new support tickets. Add salesperson employees who can create new support tickets if necessary, and who are able to place orders. 
<p><i>(For admin use only)</i></p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
